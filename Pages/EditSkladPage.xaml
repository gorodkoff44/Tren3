<Page x:Class="Tren3.EditSkladPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tren3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditSkladPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <WrapPanel>
                <TextBlock Text="Адрес " Width="150" />
                <TextBox x:Name="addrr" Text="{Binding Address}" Width="150" />
            </WrapPanel>
            <WrapPanel>
                <TextBlock Width="150" Text="Тип материала " />
                <TextBox x:Name="TypeMat" Text="{Binding TypeMaterialiv}" Width="150" />
            </WrapPanel>
            <WrapPanel>
                <TextBlock Width="150" Text="Расстояние " />
                <TextBox x:Name="rast" Text="{Binding Rasstoyanie}" Width="150" />
            </WrapPanel>
            <Button x:Name="Save" Content="Сохранить" Width="150" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Page>
